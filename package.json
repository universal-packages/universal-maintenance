{
  "name": "@universal-packages/maintenance",
  "version": "1.6.4",
  "description": "Universal packages maintenance tool",
  "author": "David De Anda <david@universal-packages.com> (https://github.com/universal-packages)",
  "license": "MIT",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": "git@github.com:universal-packages/universal-maintenance.git",
  "bin": {
    "umaintenance": "./bin/umaintenance.js",
    "@universal-packages/maintenance": "./bin/umaintenance.js"
  },
  "scripts": {
    "build": "tsc --p tsconfig.dis.json",
    "test": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:clear": "jest --clearCache",
    "format": "prettier --write \"./{src,tests}/**/*.{ts,tsx,js,jsx,json}\"",
    "command-all": "./bin/umaintenance.js command-all",
    "commit-all": "./bin/umaintenance.js commit-all",
    "prepare-development": "./bin/umaintenance.js prepare-development",
    "sync-all": "./bin/umaintenance.js sync-all",
    "update-universal-dependencies": "./bin/umaintenance.js update-universal-dependencies"
  },
  "dependencies": {
    "@universal-packages/directory-traversal": "^1.3.4",
    "@universal-packages/logger-terminal-presenter": "^1.1.8",
    "@universal-packages/package-json": "^1.0.2",
    "@universal-packages/workflows": "^1.10.0",
    "@universal-packages/workflows-terminal-presenter": "^1.6.0",
    "node-fetch": "^2.6.7",
    "ts-node": "^10.9.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.11.9",
    "@types/node-fetch": "^2.6.2",
    "@universal-packages/workflows-jest": "^1.2.14",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.3"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "setupFilesAfterEnv": [
      "@universal-packages/workflows-jest",
      "<rootDir>/tests/setup.ts"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 180,
    "trailingComma": "none",
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderParserPlugins": [
      "typescript",
      "jsx",
      "classProperties",
      "decorators-legacy"
    ]
  }
}
